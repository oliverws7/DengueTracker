{
  "name": "dengue-tracker-backend",
  "version": "2.0.0",
  "description": "Backend para sistema de combate à dengue com gamificação e notificações em tempo real",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "clean": "rm -rf node_modules && rm -f package-lock.json",
    "clean:install": "npm run clean && npm install",
    "docker:build": "docker build -t dengue-tracker-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env dengue-tracker-backend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "seed:users": "node src/scripts/seedUsers.js",
    "seed:reports": "node src/scripts/seedReports.js",
    "seed:all": "npm run seed:users && npm run seed:reports",
    "db:backup": "node src/scripts/dbBackup.js",
    "db:migrate": "node src/scripts/migrate.js",
    "validate:env": "node src/scripts/validateEnv.js",
    "health:check": "node src/scripts/healthCheck.js",
    "security:audit": "npm audit && npx snyk test",
    "security:fix": "npm audit fix",
    "docs:generate": "npx apidoc -i src/ -o docs/",
    "docs:serve": "npx serve docs/",
    "benchmark": "node src/scripts/benchmark.js",
    "monitor": "node src/scripts/monitor.js"
  },
  "keywords": [
    "dengue",
    "tracker",
    "health",
    "gamification",
    "real-time",
    "mongodb",
    "websocket"
  ],
  "author": "Sua Equipe <contato@denguetracker.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/dengue-tracker-backend.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/dengue-tracker-backend/issues"
  },
  "homepage": "https://github.com/seu-usuario/dengue-tracker-backend#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.22.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^18.0.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^7.8.8",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.8.3",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.4.5",
    "apidoc": "^1.2.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "faker": "^5.5.3",
    "jest": "^29.6.1",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.0",
    "snyk": "^1.1190.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/tests/**",
      "!src/scripts/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
